<h3>View Idea</h3>

<ul>
  <li>
    <%= idea.date.strftime("Created on %A %d-%m-%y at %H:%M")   %><br />
    <%= idea.title %><br />
    <%= idea.description %><br />
    Rank: <%= idea.rank %>
    <form action="/<%= idea.id %>/like" method="POST">
      <input type="submit" value="+">
    </form>
    <form action="/<%= idea.id %>/dislike" method="POST">
      <input type="submit" value="-">
    </form>
    <a href="/<%= idea.id %>/edit">edit</a>
    <form action="/<%= idea.id %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="delete">
    </form>
    <% unless idea.tags.nil? %>
      <div class="tags">
        Tags: <% idea.tags.split(' ').each do |tag| %>
          <a href="/tag/<%= tag %>"> <%= tag %> </a>
        <% end %>
      </div>
    <% end %>
  </li>
</ul>